}

input ReleaseRequest {
    barcodes: [String!]!
    destination: String!
    recipient: String!
}

input ExtractRequest {
    barcodes: [String!]!
    labwareType: String!
    workNumber: String
}

type OperationResult {
    labware: [Labware!]!
