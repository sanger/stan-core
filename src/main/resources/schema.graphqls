}

input ConfirmOperationRequest {
    labware: [ConfirmOperationLabware!]!
}

input ConfirmSection {
    destinationAddress: Address!
    sampleId: Int!
    newSection: Int!
}

input ConfirmSectionLabware {
    barcode: String!
    cancelled: Boolean
