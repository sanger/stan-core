input SectionRegisterContent {
    address: Address!
    species: String!
    hmdmc: String
    donorIdentifier: String!
    lifeStage: LifeStage!
    externalIdentifier: String!
    tissueType: String!
    spatialLocation: Int!
    replicateNumber: Int!
    fixative: String!
