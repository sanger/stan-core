<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="3.13.0" author="dr6">
        <createTable tableName="cell_class">
            <column name="id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="hmdmc_required" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3.13.1" author="dr6">
        <insert tableName="cell_class">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="Tissue"/>
            <column name="hmdmc_required" valueNumeric="TRUE"/>
        </insert>
        <insert tableName="cell_class">
            <column name="name" value="Organoid"/>
        </insert>
        <insert tableName="cell_class">
            <column name="name" value="Organoid pellet"/>
        </insert>
        <insert tableName="cell_class">
            <column name="name" value="Cell culture"/>
        </insert>
        <insert tableName="cell_class">
            <column name="name" value="Cell pellet"/>
        </insert>
        <insert tableName="cell_class">
            <column name="name" value="TMA"/>
        </insert>
    </changeSet>

    <changeSet id="3.13.2" author="dr6">
        <addColumn tableName="tissue">
            <column name="cell_class_id" type="INT" afterColumn="fixative_id">
                <constraints nullable="false" foreignKeyName="fk_tissue_cell_class" referencedTableName="cell_class" referencedColumnNames="id"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>